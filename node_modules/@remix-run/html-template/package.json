{
  "name": "@remix-run/html-template",
  "version": "0.3.0",
  "description": "HTML template tag with auto-escaping for JavaScript",
  "author": "Michael Jackson <mjijackson@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remix-run/remix.git",
    "directory": "packages/html-template"
  },
  "homepage": "https://github.com/remix-run/remix/tree/main/packages/html-template#readme",
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "src",
    "!src/**/*.test.ts"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "html",
    "template",
    "tagged-template",
    "template-literal",
    "safe-html",
    "xss",
    "escaping",
    "sanitize",
    "security"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "git clean -fdX",
    "test": "node --disable-warning=ExperimentalWarning --test './src/**/*.test.ts'",
    "typecheck": "tsc --noEmit"
  }
}